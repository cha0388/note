<Window x:Class="note.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Rectangle Grid.Column="1" Fill="SkyBlue"></Rectangle>        
        
        <StackPanel Grid.Column="1">
            <Button Name="OpenBtn" Click="OpenBtn_Click" Width="80" Height="30" Margin="0 50 0 0" Background="PaleTurquoise" Foreground="SteelBlue" BorderBrush="Teal">open</Button>
            <Button Name="SaveBtn" Click="SaveBtn_Click" Width="80" Height="30" Margin="0 50 0 0" Background="PaleTurquoise" Foreground="SteelBlue" BorderBrush="Teal">save</Button>
        </StackPanel>

        <TextBox Name="Textarea" AcceptsReturn="True" TextWrapping="Wrap"></TextBox> 

    </Grid>
</Window>
